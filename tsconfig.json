{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2022",
    "baseUrl": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "paths": {
      "@/constants": [
        "config/constants"
      ],
      "@/*": [
        "*"
      ],
    },
  },
  "include": [
    "src",
    "tests"
  ]
}